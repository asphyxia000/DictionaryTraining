<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="2dp"
    android:backgroundTint="@color/viewholder_exp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- Название замера -->
        <TextView
            android:id="@+id/tvBodyPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бедро"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Левый замер -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/leftInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/tvBodyPart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintHorizontal_chainStyle="spread_inside">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLeft"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:hint="-"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:backgroundTint="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Вертикальный разделитель -->
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@+id/leftInputLayout"
            app:layout_constraintBottom_toBottomOf="@+id/leftInputLayout"
            app:layout_constraintStart_toEndOf="@+id/leftInputLayout"
            app:layout_constraintEnd_toStartOf="@+id/rightInputLayout" />

        <!-- Правый замер -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rightInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/leftInputLayout"
            app:layout_constraintBottom_toBottomOf="@+id/leftInputLayout"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRight"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:hint="-"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:backgroundTint="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Горизонтальный разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="bottom" />
</FrameLayout>
