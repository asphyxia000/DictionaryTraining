<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="2dp"
    android:backgroundTint="@color/viewholder_exp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- название части тела -->
        <TextView
            android:id="@+id/tvBodyPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- левое значение -->
        <TextView
            android:id="@+id/etLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvBodyPart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider" />

        <!-- вертикальный разделитель -->
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="@id/etLeft"
            app:layout_constraintBottom_toBottomOf="@id/etLeft"
            app:layout_constraintStart_toEndOf="@id/etLeft"
            app:layout_constraintEnd_toStartOf="@id/etRight" />

        <!-- правое значение -->
        <TextView
            android:id="@+id/etRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25sp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/etLeft"
            app:layout_constraintBottom_toBottomOf="@id/etLeft"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- горизонтальный разделитель снизу -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray" />
</FrameLayout>
